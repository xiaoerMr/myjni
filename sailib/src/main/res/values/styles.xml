<resources xmlns:tools="http://schemas.android.com/tools">

	<style name="SwitchButtonMD" tools:ignore="ResourceName">
		<item name="kswThumbDrawable">@drawable/ksw_md_thumb</item>
		<item name="kswBackColor">@color/ksw_md_back_color</item>
		<item name="kswThumbRangeRatio">1.45</item>
		<item name="kswThumbMarginLeft">-16dp</item>
		<item name="kswThumbMarginTop">-14dp</item>
		<item name="kswThumbMarginRight">-16dp</item>
		<item name="kswThumbMarginBottom">-14dp</item>
		<item name="kswThumbWidth">@dimen/ksw_md_thumb_ripple_size</item>
		<item name="kswThumbHeight">@dimen/ksw_md_thumb_ripple_size</item>
	</style>
	<style name="SwitchButtonStyle">
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:paddingTop">4dp</item>
		<item name="android:paddingBottom">4dp</item>
	</style>

	<declare-styleable name="NiceSpinner">
		<attr name="arrowTint" format="color" />
		<attr name="hideArrow" format="boolean" />
		<attr name="arrowDrawable" format="reference|color"/>
		<attr name="dropDownListPaddingBottom" format="dimension"/>
		<attr name="backgroundSelector" format="integer"/>
		<attr name="textTint" format="color"/>
	</declare-styleable>


	<style name="smart_show_dialog" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowFrame">@null</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowActionBar">false</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
		<item name="android:backgroundDimEnabled">true</item>
	</style>


	<style name="smart_show_dialog_button">
		<item name="android:layout_weight">1</item>
		<item name="android:gravity">center</item>
		<item name="android:textSize">16sp</item>
		<item name="android:clickable">true</item>
		<item name="android:background">@drawable/smart_show_dialog_btn_bg</item>
	</style>

	<declare-styleable name="LoopScaleView">
		<!--可视范围内显示的大刻度数-->
		<attr name="maxShowItem" format="integer"/>
		<!--最大刻度值-->
		<attr name="maxValue" format="integer"/>
		<!--一个刻度表示的值的大小-->
		<attr name="oneItemValue" format="integer"/>
		<!--指针颜色-->
		<attr name="cursorColor" format="color"/>
		<!--刻度文字颜色-->
		<attr name="scaleTextColor" format="color"/>
		<!--指针图标，颜色和这个属性二选一-->
		<attr name="cursorMap" format="reference"/>
	</declare-styleable>
</resources>